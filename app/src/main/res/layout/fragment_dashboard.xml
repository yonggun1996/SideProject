<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="외출기간 1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:entries="@array/date"
            android:id="@+id/out1_datespiner1"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <Spinner
            android:entries="@array/time"
            android:id="@+id/out1_timespiner1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:text="~"/>

        <Spinner
            android:entries="@array/date"
            android:id="@+id/out1_datespiner2"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <Spinner
            android:entries="@array/time"
            android:id="@+id/out1_timespiner2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="외출기간 2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/out2_datespiner1"
            android:entries="@array/date"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <Spinner
            android:id="@+id/out2_timespiner1"
            android:entries="@array/time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:text="~"/>

        <Spinner
            android:id="@+id/out2_datespiner2"
            android:entries="@array/date"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <Spinner
            android:id="@+id/out2_timespiner2"
            android:entries="@array/time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="10dp"
            android:text="※외출시간 1은 꼭 설정해주세요"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/confilm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인하기"
            android:textColor="#000000"
            android:background="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_overcoat"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_coat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coat"/>

        <TextView
            android:id="@+id/text_coat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기온별로 외투를 알려주는 공간 입니다"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_shirt"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_shirt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shirt"/>

        <TextView
            android:id="@+id/text_shirt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기온별로 상의를 알려주는 공간 입니다"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pants"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_pants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pants"/>

        <TextView
            android:id="@+id/text_pants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기온별로 하의를 알려주는 공간 입니다"
            android:textSize="15dp"/>

    </LinearLayout>

</LinearLayout>